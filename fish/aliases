#git aliases
alias gco='git checkout'
alias gcm='git commit -v'

#badoo aliases
alias desktopweb-dev='cd ~/badoo/frontend/desktopweb && yarn dev'
alias mobileweb-devserver='cd ~/badoo/frontend/mobileweb/frontend && yarn dev-server'
alias mobileweb-d3='cd ~/badoo/frontend/mobileweb/frontend && yarn dev'

alias mobileweb-devserver='cd ~/badoo/frontend/mobileweb/frontend && yarn dev-server'
alias mobileweb-dev='cd ~/badoo/frontend/mobileweb/frontend && yarn dev'
alias desktopweb-dev='cd ~/badoo/_deploy/desktopweb && yarn dev'
alias selenoid-start='~/bin/cm selenoid start --vnc'
alias selenoid-stop='~/bin/cm selenoid stop'
alias selenoid-ui-start='~/bin/cm selenoid-ui start'
alias selenoid-ui-stop='~/bin/cm selenoid-ui stop'
alias stop_nginx='sudo nginx -s stop'
alias syncd3d4='unrealsync --exclude .git . d3:badoo d4:badoo'

function restart_nginx
    sudo nginx -s stop
    sudo nginx -c ~/nginx/devel/nginx/conf/nginx_local.conf -p ~/nginx/devel/nginx/conf/
    # optionally if you installed PHP
    # sudo /usr/local/sbin/php-fpm -D
end

function start_rsync
    perl /Users/chrismcdonald/dklab_realsync/realsync /Users/chrismcdonald/badoo
end
