#top aliases
alias tu='top -o cpu' 	# cpu
alias tm='top -o vsize' # memory

#ls
alias ll='ls -lah'

#reloading aliases
alias reload="source ~/bin/dotfiles/bash/aliases"

#add new alias and reload aliases
alias ea="mate -w ~/bin/dotfiles/bash/aliases && reload"

#git aliases
alias gco='git checkout'
alias gcm='git commit -v'

#ssh stickyworld
alias sw='ssh stickyworld@stickyworld.com'
alias swup='ssh stickyworld@stickyworld.com update_code'
alias swuppro='ssh stickyworld@stickyworld.com update_code production'
alias swupall='ssh stickyworld@stickyworld.com update_code both'
#ssh devserver
alias dev='ssh chris@devserver.stickyworld.com'
#ssh slider
alias slider='ssh slider@stickyworld.com'

#badoo aliases
alias desktopweb-dev='cd ~/badoo/frontend/desktopweb && yarn dev'
alias mobileweb-devserver='cd ~/badoo/frontend/mobileweb/frontend && yarn dev-server'
alias mobileweb-d3='cd ~/badoo/frontend/mobileweb/frontend && yarn dev'

restart_nginx() {
    sudo nginx -s stop
    sudo nginx -c ~/nginx/devel/nginx/conf/nginx_local.conf -p ~/nginx/devel/nginx/conf/
    # optionally if you installed PHP
    # sudo /usr/local/sbin/php-fpm -D
}

stop_nginx() {
    sudo nginx -s stop
}

start_rsync() {
    perl /Users/chrismcdonald/dklab_realsync/realsync /Users/chrismcdonald/badoo
}

alias mobileweb-devserver='cd ~/badoo/frontend/mobileweb/frontend && yarn dev-server'
