#top aliases
alias tu='top -o cpu' 	# cpu
alias tm='top -o vsize' # memory

#ls
alias ll='ls -lah'

#reloading aliases
alias reload="source ~/bin/dotfiles/bash/aliases"

#add new alias and reload aliases
alias ea="mate -w ~/bin/dotfiles/bash/aliases && reload"

#git aliases
alias gco='git checkout'
alias gcm='git commit -v'

#ssh stickyworld
alias sw='ssh -A -t nagios ssh -A -t my ssh -A sw3'
alias swup='ssh stickyworld update_code'
alias swuppro='ssh stickyworld update_code production'
alias swupall='ssh stickyworld update_code both'
#ssh slider
alias slider='ssh slider'

alias jmeter='~/bin/apache-jmeter-2.11/bin/jmeter.sh'
alias ql='qlmanage -p "$@" >& /dev/null'
alias fuck='$(thefuck $(fc -ln -1))'

alias django='docker-compose -f local.yml run --rm django python manage.py'
alias dup='docker-compose -f local.yml up'

syspip(){
   PIP_REQUIRE_VIRTUALENV="" pip "$@"
}

restart_nginx() {
    sudo nginx -s stop
    sudo nginx -c ~/nginx/devel/nginx/conf/nginx_local.conf -p ~/nginx/devel/nginx/conf/
    # optionally if you installed PHP
    # sudo /usr/local/sbin/php-fpm -D
}
