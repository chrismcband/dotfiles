#top aliases
alias tu='top -o cpu' 	# cpu
alias tm='top -o vsize' # memory

#ls
alias ll='ls -lah'

#reloading aliases
alias reload="source ~/bin/dotfiles/bash/aliases"

#add new alias and reload aliases
alias ea="mate -w ~/bin/dotfiles/bash/aliases && reload"

#git aliases
alias gco='git checkout'
alias gcm='git commit -v'

#ssh stickyworld
alias sw='ssh stickyworld'
alias swup='ssh stickyworld update_code'
alias swuppro='ssh stickyworld update_code production'
alias swupall='ssh stickyworld update_code both'
#ssh slider
alias slider='ssh slider'

alias jmeter='~/bin/apache-jmeter-2.11/bin/jmeter.sh'

alias fuck='$(thefuck $(fc -ln -1))'

syspip(){
   PIP_REQUIRE_VIRTUALENV="" pip "$@"
}
