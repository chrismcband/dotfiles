#top aliases
alias tu='top -o cpu' 	# cpu
alias tm='top -o vsize' # memory

#ls
alias ll='ls -lah'

#neovim alias
alias vim='nvim'

#git aliases
alias gco='git checkout'
alias gcm='git commit -v'

function gmm() {
    branch=$(git branch --show-current)
    git checkout master && git pull && git checkout $branch && git merge master && echo 'Merged master'
}

function gso() {
    branch=$(git branch --show-current)
    git branch --set-upstream-to=origin/$branch $branch
    git pull
}

selenoid() {
    /Users/chris.mcdonald/bin/selenoid/selenoid -conf /Users/chris.mcdonald/bin/selenoid/browsers.json -disable-docker -timeout 1h
}

function phpunit() {
    docker compose -f /Users/chris.mcdonald/badoo/testlib/Selenium/docker-compose.yml --env-file /Users/chris.mcdonald/badoo/testlib/Selenium/.env run --rm phpunit "$@"
}

# ollama open-webui
alias open-webui='docker run -d -p 3001:8080 --add-host=host.docker.internal:host-gateway -v open-webui:/app/backend/data --name open-webui --restart always ghcr.io/open-webui/open-webui:main || docker start open-webui'

