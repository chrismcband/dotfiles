#top aliases
alias tu='top -o cpu' 	# cpu
alias tm='top -o vsize' # memory

#ls
alias ll='ls -lah'

#neovim alias
alias vim='nvim'

#git aliases
alias gco='git checkout'
alias gcm='git commit -v'

function gmm() {
    branch=$(git branch --show-current)
    git checkout master && git pull && git checkout $branch && git merge master && echo 'Merged master'
}

function gso() {
    branch=$(git branch --show-current)
    git branch --set-upstream-to=origin/$branch $branch
    git pull
}

#badoo aliases
alias desktopweb-dev='cd ~/badoo/frontend/desktopweb && yarn dev'
alias mobileweb-devserver='cd ~/badoo/frontend/mobileweb/frontend && yarn dev-server'
alias mobileweb-d3='cd ~/badoo/frontend/mobileweb/frontend && yarn dev'

restart_nginx() {
    sudo nginx -s stop
    sudo nginx -c ~/nginx/devel/nginx/conf/nginx_local.conf -p ~/nginx/devel/nginx/conf/
    # optionally if you installed PHP
    # sudo /usr/local/sbin/php-fpm -D
}

stop_nginx() {
    sudo nginx -s stop
}

start_rsync() {
    perl /Users/chrismcdonald/dklab_realsync/realsync /Users/chrismcdonald/badoo
}

selenoid() {
    /Users/chris.mcdonald/bin/selenoid/selenoid -conf /Users/chris.mcdonald/bin/selenoid/browsers.json -disable-docker -timeout 1h
}

phpunit() {
    docker-compose -f /Users/chris.mcdonald/badoo/testlib/Selenium/docker-compose.yml --env-file /Users/chris.mcdonald/badoo/testlib/Selenium/.env run --rm phpunit --printer '\TestLib\TestListener\SeleniumDocker' "$@"
}

